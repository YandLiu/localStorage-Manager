{
    "manifest_version": 3,
    "name": "localStorage Manager",
    "version": "1.0",
    "description": "Export and import localStorage",
    "permissions": ["activeTab", "clipboardWrite", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "localStorage-Manager@example.com"
        }
    }
}
